<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_blue"
    tools:context=".Questionnaire">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="4dp"
            android:text="@string/questionnaire_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/design_default_color_background"
            android:textSize="20sp" />


        <LinearLayout

            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_shadow"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/firstQuestion"
                android:textColor="@color/material_blue_grey_95"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background"
                    android:button="@drawable/button_background"
                    android:padding="15dp"
                    android:text="@string/firstQuestionFirstOption" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background"
                    android:button="@drawable/button_background"
                    android:padding="15dp"
                    android:paddingStart="5dp"
                    android:text="@string/firstQuestionSecondOption" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background"
                    android:button="@drawable/button_background"
                    android:padding="15dp"
                    android:paddingStart="5dp"
                    android:text="@string/firstQuestionThirdOption" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background"
                    android:button="@drawable/button_background"
                    android:padding="15dp"
                    android:paddingStart="5dp"
                    android:text="@string/firstQuestionFourthOption" />

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background"
                    android:button="@drawable/button_background"
                    android:padding="15dp"
                    android:paddingStart="5dp"
                    android:text="@string/firstQuestionFifthOption" />
            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/prevBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:animateLayoutChanges="true"
                >

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:background="@color/float_transparent"
                    android:src="@drawable/ic_back" />

                <com.wang.avi.AVLoadingIndicatorView
                    style="@style/AVLoadingIndicatorView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    app:indicatorColor="@color/white"
                    app:indicatorName="LineSpinFadeLoaderIndicator" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/btn_solid_green_ripple">

                <TextView
                    android:id="@+id/submitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <com.wang.avi.AVLoadingIndicatorView

                    style="@style/AVLoadingIndicatorView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    app:indicatorColor="@color/white"
                    app:indicatorName="LineSpinFadeLoaderIndicator" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nextBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:animateLayoutChanges="true"
                >

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/float_transparent"
                    android:rotation="180"
                    android:src="@drawable/ic_back" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/submitProgress"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    app:indicatorColor="@color/white"
                    app:indicatorName="LineSpinFadeLoaderIndicator" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>